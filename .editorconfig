root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.ts]
indent_style = space
indent_size = 2

[*.ipynb]
indent_style = space
indent_size = 4
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
